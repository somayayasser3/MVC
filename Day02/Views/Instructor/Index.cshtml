@model List<InstructorInfo>
@{
    ViewData["Title"] = "Index";
}

<h1>All Instructors</h1>
<table class="table table-bordered table-hover">
    <tr>
        <th>Name</th>
        <th>Salary</th>
        <th>Course Name</th>
        <th>Address</th>
        <th>Deraptment Name</th>
        <th>Image</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.InstructorName</td>
            <td>@item.Salary</td>
            <td>@item.CourseName</td>
            <td>@item.Address</td>
            <td>@item.DepartmentName</td>
            <td><img src="/Images/@item.InstructorImag" style="width: 50px; height: 50px; object-fit: cover;" alt="Instructor Image"/></td>
            <td>
            <a href="@Url.Action("Details", "Instructor", new { id = item.Id })" class="btn btn-primary">
            View Details
            </a>
            </td>
        </tr>
    }
</table>
