@model List<Trainee_CourseViewModel>
@{
    ViewData["Title"] = "Trainee Courses";
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">
                Courses
                <small class="text-muted">for  @ViewBag.TraineeName </small>
            </h1>
            <hr class="my-4">
        </div>
    </div>

    <div class="row">
        <!-- Trainee Profile Card -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <!-- Trainee Image -->
                <img 
                    src="/Images/@ViewBag.Imag" 
                    class="card-img-top" 
                    alt="@ViewBag.TraineeName" 
                    style="height: 250px; object-fit: cover;" 
                    onerror="this.src='/images/default-profile.jpg'">
                
                <!-- Trainee Info -->
                <div class="card-body">
                    <h3 class="card-title">@ViewBag.TraineeName</h3>
                    <div class="mt-3">
                        <p class="card-text">
                            <strong>Total Courses:</strong> 
                            <span class="badge bg-secondary">@Model.Count</span>
                        </p>
                    </div>
                </div>
                
            </div>
        </div>
        
        <!-- Courses Table -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Enrolled Courses</h3>
                </div>
                
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Course Name</th>
                                    <th>Degree</th>
                                    <th>Min Degree</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                             <tbody>
                            @foreach (var course in Model)
                            {
                        <tr>
                            <td>@course.CourseName</td>
                            <td>@course.Degree</td>
                            <td>@course.MinGrade</td>
                                <td>
                                    <span class="badge"
                                          style="background-color:@course.Color;">
                                            @course.status
                                    </span>
                                </td>
                                <td><a href="@Url.Action("Results", "Trainee", new { Cid = course.CID, Tid = course.TID})" class="btn btn-primary">
                    Show Grades
                    </a>
                    </td>
   
                        </tr>
                            }
            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
