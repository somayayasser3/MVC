@model Trainee_CourseViewModel
@{
    ViewData["Title"] = "Results";
}

<h1>Result of @Model.TraineeName at @Model.CourseName course</h1>
<environment include="Development">
   <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/itemDetails.css" /> 
</environment>
<div class="container">
    <div class="instructor-card">
        <div class="row g-0">
            <!-- Profile Section -->
            <div class="col-md-4 profile-section d-flex flex-column align-items-center justify-content-center">
                <img src="/Images/@Model.Imag" )" alt="Instructor" class="instructor-img"/>
                <h2 class="text-center mb-1">@Model.TraineeName</h2>
                <p class="text-center opacity-75 mb-3">Trainee</p>
            </div>

            <!-- Details Section -->
            <div class="col-md-8 bg-white p-4">
                <h3 class="mb-4 border-bottom pb-3">Result Details</h3>

                <div class="detail-item d-flex align-items-center">
                    <div>
                        <div class="detail-label">Course Name</div>
                        <div class="detail-value">@Model.CourseName</div>
                    </div>
                </div>

                <div class="detail-item d-flex align-items-center">
                    <div>
                        <div class="detail-label">Grade</div>
                        <div class="detail-value" style="color:@Model.Color;">@Model.Degree</div>
                    </div>
                </div>

                <div class="detail-item d-flex align-items-center">
                    <div>
                        <div class="detail-label">Status</div>
                        <div class="detail-value" style="color:@Model.Color;" >@Model.status</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>